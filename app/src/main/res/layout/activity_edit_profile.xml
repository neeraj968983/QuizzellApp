<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfile"
    android:orientation="vertical">

    <TextView
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/quizeelblock"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="154dp"
        android:layout_height="81dp"
        android:layout_below="@+id/block1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="-81dp"
        android:layout_marginEnd="117dp"
        app:srcCompat="@drawable/frame1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Profile"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/reviewbox">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewprof2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="First name:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/FirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewprof3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Last name:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/LastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewprof4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Gender:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="124dp"
                        android:layout_height="45dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textviewprof5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />


                    <EditText
                        android:id="@+id/Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:minLines="2"
                        android:textSize="16dp"
                        android:background="@drawable/reviewbox"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cornerRadius="20dp"
                        android:backgroundTint="#300E01"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/black"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Edit"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reviewbox">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/update1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="UserName:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/usernameOfEdit"
                        android:ems="10"
                        android:enabled="false"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/update2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Email Id:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/Email"
                        android:ems="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update3"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:text="DOB:"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/DOB"
                    android:ems="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/calender_black"
                    />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/update4"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:text="Contact No.:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/Contact"
                        android:ems="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/backbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cornerRadius="20dp"
                        android:backgroundTint="@color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/black"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Back"
                        android:textSize="18dp" />

                    <Button
                        android:layout_marginLeft="20dp"
                        android:id="@+id/updatebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:cornerRadius="20dp"
                        android:backgroundTint="#300E01"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/black"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Update"
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>