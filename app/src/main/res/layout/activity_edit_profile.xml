<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile1"
    tools:context=".EditProfile"
    android:orientation="vertical">

    <TextView
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/quizeelblock"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="154dp"
        android:layout_height="81dp"
        android:layout_below="@+id/block1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="-81dp"
        android:layout_marginEnd="117dp"
        app:srcCompat="@drawable/frame1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/imageView1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="139dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="117dp"
                android:src="@drawable/profileicon"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/editTextTextPersonName"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="15sp"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:text=" Edit Photo"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="227dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewprof2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Image1"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"

                    android:text="First name:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName" />

                <EditText
                    android:id="@+id/FirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextTextPersonName"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="25sp"
                    android:ems="8"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewprof3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textviewprof2"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="10dp"
                    android:text="Last name:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textviewprof2" />

                <EditText
                    android:id="@+id/LastName"
                    android:ems="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/box1"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewprof4"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textviewprof3"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="10dp"
                    android:text="Gender:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textviewprof3" />

                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="124dp"
                    android:layout_height="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textviewprof5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textviewprof4"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="10dp"
                    android:text="Address:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textviewprof4" />


                <EditText
                    android:id="@+id/Address"
                    android:ems="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/box3"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="20sp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="@color/transparent"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Edit"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/update"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="159dp"
                android:layout_marginTop="12dp"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update1"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Update"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"

                    android:text="UserName:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/update" />

                <TextView
                    android:id="@+id/usernameOfEdit"
                    android:ems="8"
                    android:enabled="false"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update2"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update1"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"

                    android:text="EmailId:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/update1" />

                <EditText
                    android:id="@+id/Email"
                    android:ems="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_edit1"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update3"
                    android:layout_width="139dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/Update2"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"

                    android:text="DOB:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/update2" />

                <EditText
                    android:id="@+id/DOB"
                    android:ems="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_edit2"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update4"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/Update2"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"

                    android:text="Contact No.:"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/update3" />

                <EditText
                    android:id="@+id/Contact"
                    android:ems="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_edit3"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backbtn"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="18dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="@color/black"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Back"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/updatebtn"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="18dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#300E01"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Update"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>