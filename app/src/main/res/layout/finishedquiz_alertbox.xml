<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_gravity="center"
    android:layout_height="700dp"
    android:background="@drawable/result_page_gradient"
    tools:context=".ResultPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/AlertBoxScoreCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Score Card"
                android:textSize="42dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Username"
                android:textSize="24dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxQuizNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Name       :"
                android:layout_marginLeft="70dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/AlertBoxQuizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category           :"
                android:textSize="20dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/AlertBoxCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxTopicLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic                  :"
                android:textSize="20dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/AlertBoxTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxMaxMarksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max. Marks       :"
                android:textSize="20dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/AlertBoxMaxMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxYourScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxYourScore"
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxGradeDescription"
                android:text="Outstanding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxTotalQuestionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Questions  "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlertBoxTotalQuestions"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxTotalAttemptedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempted    "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlertBoxTotalAttempted"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxCorrectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct    "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlertBoxCorrect"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxWrongLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong    "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlertBoxWrong"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AlertBoxSkippedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skipped    "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlertBoxSkipped"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AlertBoxExitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/toolbarColor"
                android:text="Exit" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>