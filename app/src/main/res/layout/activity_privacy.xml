<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Privacy"
        android:background="@drawable/notifypasswordbackground">


        <TextView
            android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/quizeelblock" />

    <Button
        android:id="@+id/change"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/block1"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:text="Change Password"
        android:textSize="20sp"/>


    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="250sp"/>

    <TextView
            android:id="@+id/notification"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="45in"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="48dp"
            android:text="Notifications:"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appnotify"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/notification"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="45in"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="153dp"
            android:text="App Notifications:"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="63dp"
            android:layout_height="44dp"
            android:layout_below="@+id/notification"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="45dp"
            />

        <Button
            android:id="@+id/back"
            android:layout_width="212dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_round"
            android:text="Back"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:srcCompat="@drawable/frame1" />
    </RelativeLayout>
